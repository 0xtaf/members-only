extends layout

block content
  
  .login
    if (currentUser) 

      p Hello #{currentUser.first_name}
      form(method='POST', action='/post')
        label(for='postarea') Post: 
        input#postarea(type="textarea" name="postarea" required=true)
        button(type="submit") Send
        <br>
        <br>
    else

      a(href="/register") Register
    
      a(href="/login") Login
        
       